<h3 class="ui header">{{t "forms.i-i-s-fotokiosk9-отправ-на-почту-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.фИО
      class=(if (v-get validationModel "фИО" "isInvalid") "error")
      label=(t "forms.i-i-s-fotokiosk9-отправ-на-почту-e.фИО-caption")
      data-test-i-i-s-fotokiosk9-отправ-на-почту-e-фИО=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "фИО" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.email
      class=(if (v-get validationModel "email" "isInvalid") "error")
      label=(t "forms.i-i-s-fotokiosk9-отправ-на-почту-e.email-caption")
      data-test-i-i-s-fotokiosk9-отправ-на-почту-e-email=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "email" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.сделатьФото.id
      class=(if (v-get validationModel.сделатьФото "id" "isInvalid") "error")
      label=(t "forms.i-i-s-fotokiosk9-отправ-на-почту-e.сделатьФото.id-caption")
      data-test-i-i-s-fotokiosk9-отправ-на-почту-e-сделатьФото-id=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.сделатьФото "id" "message")}}
  </div>
  <div class="field" data-test-i-i-s-fotokiosk9-отправ-на-почту-e-сделатьФото-категорФото="true">
    <label>{{t "forms.i-i-s-fotokiosk9-отправ-на-почту-e.сделатьФото.категорФото-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-fotokiosk9-категория")
      value=model.сделатьФото.категорФото
      class=(if (v-get validationModel.сделатьФото "категорФото" "isInvalid") "error")
      readonly=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.сделатьФото "категорФото" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.сделатьФото.колВоФото
      class=(if (v-get validationModel.сделатьФото "колВоФото" "isInvalid") "error")
      label=(t "forms.i-i-s-fotokiosk9-отправ-на-почту-e.сделатьФото.колВоФото-caption")
      data-test-i-i-s-fotokiosk9-отправ-на-почту-e-сделатьФото-колВоФото=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.сделатьФото "колВоФото" "message")}}
  </div>
</form>
